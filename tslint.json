{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-var-requires": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "array-type": [
      true,
      "generic"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "any"
      }
    ],
    "object-literal-sort-keys": false,
    "variable-name": false,
    "no-console": false,
    "max-line-length": [
      true,
      150
    ],
    "max-classes-per-file": [
      true,
      2
    ],
    "whitespace": false,
    "no-trailing-whitespace": false,
    "no-string-literal": false,
    "space-before-function-paren": false,
    "no-namespace": false,
    "experimentalDecorators": true,
    "ter-indent": [
      true,
      4
    ]
  },
  "rulesDirectory": []
}
